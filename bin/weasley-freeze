#!/bin/bash

nif="$2"

if [ "$nif" = "" ]; then
  echo "weasley-freeze < on | off | status > <NETWORK INTERFACE>"
  exit
fi
if [ "$1" = "on" ]; then
  sudo tc qdisc add dev $nif root handle 1:0 netem delay 10000ms
  exit
fi
if [ "$1" = "off" ]; then
  sudo tc qdisc del dev $nif root
  exit
fi
if [ "$1" = "status" ]; then
  sudo tc -s qdisc show dev $nif
  exit
fi
